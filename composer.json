{
    "name": "jungle-bay/telegram-bot-api",
    "description": "PHP Library for Telegram Bot API",
    "type": "library",
    "keywords": [
        "php",
        "php-library",
        "telegram",
        "bot",
        "api"
    ],
    "homepage": "https://core.telegram.org/bots/api/",
    "license": "MIT",
    "authors": [
        {
            "name": "Roma Baranenko",
            "email": "jungle.romabb8@gmail.com",
            "role": "Lead Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/jungle-bay/telegram-bot-api/issues/"
    },
    "require": {
        "php": ">=5.5.0",
        "ext-json": "*",
        "ext-curl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8.36"
    },
    "suggest": {
        "jungle-bay/telegram-bot-cli": "CLI Utility for Telegram Bot",
        "jungle-bay/telegram-bot-shell": "This is mechanism for processing bot commands"
    },
    "autoload": {
        "psr-4": {
            "TelegramBotAPI\\": "src/TelegramBotAPI/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TelegramBotAPI\\Tests\\": "tests/TelegramBotAPI/"
        }
    },
    "scripts": {
        "test": "phpunit --bootstrap vendor/autoload.php --filter",
        "tests": "phpunit --bootstrap vendor/autoload.php tests"
    },
    "archive": {
        "exclude": [
            "*",
            ".*",
            "!src/*",
            "!composer.json"
        ]
    }
}
